<div class="col-lg-4 offset-lg-4">
  <h1 class="text-center font-weight-bold text-success mt-lg-5">Sign up</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.input :email, required: true, autofocus: true, placeholder: "Email address" %>
      <%= f.input :password, required: true, placeholder: "Password" %>
      <%= f.input :password_confirmation, required: true, placeholder: "Password confirmation", autocomplete: "off" %>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-success waves-effect waves-light btn-block btn-lg mt-lg-3' %>
      </div>
    <% end %>
</div>
