<h1 align="center"> Edit Event</h1>
<div class='row'>
  <div class='col-xs-12'>
		<%= form_for(@event, html: {class: "form-horizontal", role:"form"}) do |f| %>
			<div class='form-group'>
		  	<div class='control-label col-sm-2'>
		  		<%= f.label :name %>
				</div>
				<div class='col-sm-8'>
					<%= f.text_field :title, class:'form-control', autofocus: true  %>
				</div>
			</div>
				
			<div class='form-group'>
				<div class='control-label col-sm-2'>
			  	<%= f.label :source %>
				</div>  		
				<div class='col-sm-8'>
					<%= f.text_field :source, class:'form-control', placeholder: "Source", autofocus: true  %>
				</div> 		
			</div>

			<div class='form-group'>
				<div class='control-label col-sm-2'>
			  	<%= f.label :tag_list, "Tags (separated by commas)" %>
				</div> 
				<div class='col-sm-8'>
					<%= f.text_field :tag_list, class:'form-control', placeholder: "Tag", autofocus: true %>
				</div> 	
			</div>				

			<div class='form-group'>
			  <div class='col-sm-offset-2 col-sm-10'>
					<%= f.submit("Update", class: 'btn btn-primary btn-lg') %>
				</div>
			</div>
		<% end %>
	</div>
</div>