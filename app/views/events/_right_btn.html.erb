<span class="input-group-btn float-right">
  <button class="btn btn-icon waves-effect waves-light btn-sm btn-primary mr-lg-2 " type="button"  title="Hide">
    <i class="fa fa-keyboard-o" id="hide-<%=event.id%>" ></i>
  </button>
  <%unless bookmark?(current_user, event)%>
  <button class="btn btn-icon waves-effect waves-light btn-sm btn-primary m-b-5" type="button" title="Bookmark">
    <i class="fa fa-star bookmark-btn" id="bookmark-<%=event.id%>"></i>
  </button>
  <%else%>
  <button class="btn btn-icon waves-effect waves-light btn-sm btn-primary m-b-5 " type="button" title="Bookmark">
    <i class="fa fa-star"></i>
  </button>
  <%end%>
</span>