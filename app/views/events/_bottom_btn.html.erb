<div class="btn-bottom mt-lg-2">
  <button class="btn btn-icon waves-effect waves-light btn-sm btn-secondary mr-lg-1 disabled" type="button" title="View Count">
    <i class="fa fa-eye fa-1x ", title="View count" id="view-count-<%=event.id%>"></i>
  </button>
  <span class= "btn btn-icon waves-effect waves-light btn-sm btn-secondary mx-lg-1 disabled">
    <%= event.view_count %>
  </span> |
  <button class="btn btn-icon waves-effect waves-light btn-sm btn-secondary mx-lg-1 disabled" type="button" title="Like Count">
    <i class="fa fa-thumbs-up"></i> 
  </button> 

  <span class="btn btn-icon waves-effect waves-light btn-sm btn-secondary mx-lg-1 disabled"><%= event.likes.count %></span>  
  <% if liked_by_user?(current_user, event) %>
  <%= link_to 'Unlike', unlike_event_path(event) %>
  <% else %>
  <%= link_to 'Like', like_event_path(event) %>
  <% end %>


  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong-<%=event.id%>">
    <i class="fa fa-comments"></i>
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModalLong-<%=event.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content" >
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Comment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="fill-data offset-1">
          <% event.comments.each do |comment| %>
          <%= comment.body %> </br>
          <small><b>
            <%= comment.user.name %> - 
            <%= time_ago_in_words(comment.created_at) %>
          </b></small> 
          <% end %>
        </div>
        <div class="modal-body">
          <% if user_signed_in? %>
          <%= simple_form_for [event, event.comments.new], method: :post, remote: true do |f|%>
          <%= f.input :body, input_html: {class: 'comment-content'} %>                              
          <%= f.input :user, :as => :hidden, input_html: { value: current_user.id }%>
          <%= f.submit %>
          <% end %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>