<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>
 
<h2>Add a comment:</h2>
<%= form_with(model: [ @event, @event.comments.build ], local: true) do |form| %>
  
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
 
  <%= form.hidden_field :user_id, :value => current_user.id %>
  <p>
    <%= form.submit "Create" %>
  </p>
<% end %>

<% @event.comments.each do |comment| %>
    <h6> Comment :<%= comment.body %></h6> 
      <% if user_signed_in? && current_user == @event.user %>
    <%= link_to 'Edit', edit_event_comment_path(@event) %>
    <%= link_to 'Destroy', event_comment_path(@event),
               method: :delete,
               data: { confirm: 'Are you sure?' } %> <br>
      <% end %>
<% end %>
 
