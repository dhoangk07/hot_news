<h1>Top Stories</h1>

<% @events.each do |event| %>

	 <h3 ><%= link_to event.title , event.source , class: "source-link", id: "source-link-#{event.id}", target:"_blank" %></h3>

		<small><%=host_without_www(event.source).capitalize%> | <%= event.date %> | <a id="view-count-<%=event.id%>">View counts: <%= event.view_count%></a><br/></small>
  <%= link_to 'Edit Event', edit_event_path(event) %>

<p>
  Tags: <%= raw event.tags.map(&:name).map { |t| link_to t, tag_path(t)}.join(', ') %>
</p>
<% end %>
