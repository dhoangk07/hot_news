<div align="center" class="pagination">
  <%= will_paginate(events, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>

<div class="container mb-lg-4">
  <% events.each do |event| %>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb <%= read_event_class(current_user, event) %>">
        <div class="breadcrumb-item col-lg-12 <%= read_event_class(current_user, event) %> event-wrapper pr-lg-3" >
          <span class="input-group-btn float-right">
            <button class="btn btn-icon waves-effect waves-light btn-sm btn-primary mr-lg-2 " type="button"  title="Hide">
              <i class="fa fa-keyboard-o" id="hide-<%=event.id%>" ></i>
            </button>
            <%unless bookmark?(current_user, event)%>
              <button class="btn btn-icon waves-effect waves-light btn-sm btn-primary m-b-5" type="button" title="Bookmark">
                <i class="fa fa-star bookmark-btn" id="bookmark-<%=event.id%>"></i>
              </button>
            <%else%>
              <button class="btn btn-icon waves-effect waves-light btn-sm btn-primary m-b-5 " type="button" title="Bookmark">
                <i class="fa fa-star"></i>
              </button>
            <%end%>
          </span>
          <div class="event-title" >
            <h4>
              <%= link_to event.title, event.source, class: "source-link", id: "source-link-#{event.id}", target:"_blank" %>
            </h4>
          </div>
          <div class="event-source" >
            <h6><%= link_to "#{host_without_www(event.source).capitalize}", events_path(filter: host_without_www(event.source))%></h6> 
          </div>
            <button class="btn btn-light btn-sm" type="button" title="Tags">
              <i class="fa fa-tags icon-tag", title="Tags">Tags</i>
            </button>
          <div class="event-edit">   
            <span class="label">
              <%= raw event.tags.map(&:name).map { |t| link_to t, tag_path(t)}.join(', ') %>
            </span>
          </div>
          <div class="btn-bottom mt-lg-2">
            <button class="btn btn-icon waves-effect waves-light btn-sm btn-secondary mr-lg-1 disabled" type="button" title="View Count">
              <i class="fa fa-eye fa-1x ", title="View count" id="view-count-<%=event.id%>"></i>
            </button>
            <span class= "btn btn-icon waves-effect waves-light btn-sm btn-secondary mx-lg-1 disabled">
              <%= event.view_count %>
            </span> |
            <button class="btn btn-icon waves-effect waves-light btn-sm btn-secondary mx-lg-1 disabled" type="button" title="Like Count">
              <i class="fa fa-thumbs-up"></i> 
            </button>
            <span class="btn btn-icon waves-effect waves-light btn-sm btn-secondary mx-lg-1 disabled"><%= event.likes.count %></span>  
              <% if liked_by_user?(current_user, event) %>
                <%= link_to 'Unlike', unlike_event_path(event) %>
              <% else %>
                <%= link_to 'Like', like_event_path(event) %>
              <% end %>
          </div>
      </ol>
    </nav>
  <% end %>
</div>

