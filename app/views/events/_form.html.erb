<div class="offset-3">
  <%= paginate @events, left: 1, right: 3 %>
</div>
<div class="container mb-lg-4">
  <% events.each do |event| %>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb <%= read_event_class(current_user, event) %>">
        <div class="breadcrumb-item col-lg-12 <%= read_event_class(current_user, event) %> event-wrapper pr-lg-3" >
          <%= render 'right_btn',   event: event %>
          <%= render 'event_title', event: event %>
          <%= render 'bottom_btn',  event: event %>
        </div>
      </ol>
    </nav>
  <% end %>
</div>
<div class="offset-3">
  <%= paginate @events %>
</div>
<%= render 'footer' %>
