<% if page.current? %>
  <li class="page-item active rounded">
    <%= content_tag :a, page, data: { remote: remote }, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), class: 'page-link rounded btn-sm' %>
  </li>
<% else %>
  <li class="page-item mx-1 ">
    <%= link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), class: 'page-link rounded btn btn-sm' %>
  </li>
<% end %>
