<div class="modal-body">
	<% if user_signed_in? %>
	 	<%= simple_form_for [event, event.comments.new], method: :post, remote: true do |f|%>
		 	<%= f.input :body, input_html: {class: 'comment-content'} %>                              
		 	<%= f.input :user, :as => :hidden, input_html: { value: current_user.id }%>
		 	<%= f.submit %>
	 	<% end %>
	<% end %>
</div>